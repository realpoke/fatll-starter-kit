{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/livewire-starter-kit",
    "type": "project",
    "description": "The official Laravel starter kit for Livewire.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/reverb": "^1.5",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.1.1",
        "livewire/flux-pro": "^2.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "barryvdh/laravel-ide-helper": "^3.5",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.18",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-type-coverage": "^3.5",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0",
        "soloterm/solo": "^0.5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "php artisan ide-helper:models --nowrite"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
                "open-link": "export $(cat .env | grep APP_URL) && if [ $(uname) = 'Darwin' ]; then open $APP_URL; elif [ $(uname) = 'Linux' ]; then xdg-open $APP_URL; elif [ $(uname) = 'MINGW32_NT' ] || [ $(uname) = 'MINGW64_NT' ]; then start $APP_URL; fi",
        "setup": [
            "composer install",
            "bun install",
            "@post-root-package-install",
            "@post-create-project-cmd",
            "@php artisan storage:link --ansi",
            "@open-link",
            "@dev"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "@php artisan solo"
        ],
        "lint": "pint",
        "refactor": "rector",
        "fix": [
            "@refactor",
            "@lint"
        ],
        "fix:test": [
            "@fix",
            "@test:unit",
            "@test:typos",
            "@test:types",
            "@test:type-coverage"
        ],
        "test:lint": "pint --test",
        "test:refactor": "rector --dry-run",
        "test:unit": "pest --parallel --coverage --exactly=100",
        "test:typos": "peck",
        "test:types": "phpstan",
        "test:type-coverage": "pest --parallel --type-coverage --min=100",
        "test:arch": "pest --parallel --filter=arch",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:arch",
            "@test:unit",
            "@test:typos",
            "@test:types",
            "@test:type-coverage"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": {
        "flux-pro": {
            "type": "composer",
            "url": "https://composer.fluxui.dev"
        }
    }
}
